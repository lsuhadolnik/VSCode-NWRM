{
  "name": "dynamics-crm-webresources",
  "displayName": "Dynamics CRM Web Resources Manager",
  "description": "Manage Dynamics CRM Web Resources from VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dynamicsCrm.connect",
    "onView:connections",
    "onCommand:dynamicsCrm.connectSaved",
    "onCommand:dynamicsCrm.deleteToken"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dynamicsCrm.connect",
        "title": "Dynamics CRM: Connect"
      },
      {
        "command": "dynamicsCrm.connectSaved",
        "title": "Dynamics CRM: Connect Saved"
      },
      {
        "command": "dynamicsCrm.deleteToken",
        "title": "Dynamics CRM: Delete Token"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dynamics CRM Web Resources Manager",
      "properties": {
        "dynamicsCrm.clientId": {
          "type": "string",
          "description": "Azure AD application (client) ID used for authentication"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webResourceManager",
          "title": "Web Resource Manager"
        }
      ]
    },
    "views": {
      "webResourceManager": [
        {
          "id": "connections",
          "name": "Connections"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "dynamicsCrm.deleteToken",
          "when": "view == connections && viewItem == connection",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "test": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@azure/msal-node": "^3.6.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0"
  }
}
